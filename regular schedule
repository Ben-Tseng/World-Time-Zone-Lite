javascript:(function(){if(!confirm('Start Daily Status Scheduler?\n\nThis program will automatically:\n• 8:00 AM - Set Meeting (10 min)\n• 10:00 AM - Set Break (15 min)\n• 12:00 PM - Set Lunch (60 min)\n• 3:00 PM - Set Break (15 min)\n• 5:00 PM - Set Offline & Close\n\nContinue?'))return;const stateSelectors={Available:'Available',Break:'Break',Lunch:'Lunch',Meeting:'Meeting',Offline:'Offline'};function simulateStateSelection(state){const btn=document.querySelector('button[id*="dropdown"]');if(!btn)return;btn.click();setTimeout(function(){const opts=document.querySelectorAll('li[role="presentation"] span[role="menuitem"]');opts.forEach(opt=>{if(opt.textContent.trim()===state){opt.click();}});},500);}function calculateDelayUntil(hour,min=0){const now=new Date();let target=new Date(now);target.setHours(hour,min,0,0);if(now>target)target.setDate(target.getDate()+1);return target-now;}setTimeout(()=>{simulateStateSelection(stateSelectors.Meeting);setTimeout(()=>{simulateStateSelection(stateSelectors.Available);},10*60*1000);},calculateDelayUntil(8,0));setTimeout(()=>{simulateStateSelection(stateSelectors.Break);setTimeout(()=>{simulateStateSelection(stateSelectors.Available);},15*60*1000);},calculateDelayUntil(10,0));setTimeout(()=>{simulateStateSelection(stateSelectors.Lunch);setTimeout(()=>{simulateStateSelection(stateSelectors.Available);},60*60*1000);},calculateDelayUntil(12,0));setTimeout(()=>{simulateStateSelection(stateSelectors.Break);setTimeout(()=>{simulateStateSelection(stateSelectors.Available);},15*60*1000);},calculateDelayUntil(15,0));setTimeout(()=>{simulateStateSelection(stateSelectors.Offline);setTimeout(()=>{window.close();},1000);},calculateDelayUntil(17,0));})();