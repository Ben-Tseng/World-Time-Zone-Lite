javascript:(function(){const stateSelectors={Available:'Available',Break:'Break',Lunch:'Lunch',Meeting:'Meeting',Offline:'Offline',Email:'Email',System:'System',Project:'Project'};const defaultDurations={Lunch:60,Break:30,Meeting:60};let programActive=true;function simulateStateSelection(state){if(!programActive)return;document.querySelector('button[id*="dropdown"]').click();setTimeout(function(){const options=document.querySelectorAll('li[role="presentation"] span[role="menuitem"]');options.forEach(option=>{if(option.textContent.trim()===state){option.click();}});},500);}function calculateDelayUntil(hour){const now=new Date();let targetTime=new Date(now);targetTime.setHours(hour,0,0,0);if(now>targetTime){targetTime.setDate(targetTime.getDate()+1);}return targetTime-now;}function executeStates(states,index=0){if(!programActive||index>=states.length){if(programActive)simulateStateSelection(stateSelectors.Available);return;}const state=states[index];simulateStateSelection(stateSelectors[state.name]);setTimeout(()=>executeStates(states,index+1),state.duration*60*1000);}const modal=document.createElement('div');modal.style.cssText='position:fixed;top:50%;left:50%;transform:translate(-50%,-50%);background:white;border:2px solid #333;padding:20px;z-index:10000;font-family:Arial;';modal.innerHTML='<h3>选择状态</h3><div><input type="checkbox" id="lunch"><label for="lunch">Lunch</label></div><div><input type="checkbox" id="break"><label for="break">Break</label></div><div><input type="checkbox" id="meeting"><label for="meeting">Meeting</label><input type="number" id="meetingTime" value="60" disabled style="margin-left:10px;width:60px;" step="0.1">分钟</div><div><input type="checkbox" id="other"><label for="other">其他</label><select id="otherSelect" disabled style="margin-left:10px;"><option value="Email">Email</option><option value="System">System</option><option value="Project">Project</option></select><input type="number" id="otherTime" value="60" disabled style="margin-left:10px;width:60px;" step="0.1">分钟</div><br><button id="confirmBtn">确定</button><button id="cancelBtn">取消</button>';document.body.appendChild(modal);modal.querySelector('#meeting').onchange=function(){modal.querySelector('#meetingTime').disabled=!this.checked;};modal.querySelector('#other').onchange=function(){modal.querySelector('#otherSelect').disabled=!this.checked;modal.querySelector('#otherTime').disabled=!this.checked;};modal.querySelector('#confirmBtn').onclick=function(){const states=[];if(modal.querySelector('#lunch').checked)states.push({name:'Lunch',duration:60});if(modal.querySelector('#break').checked)states.push({name:'Break',duration:30});if(modal.querySelector('#meeting').checked)states.push({name:'Meeting',duration:parseFloat(modal.querySelector('#meetingTime').value)||60});if(modal.querySelector('#other').checked){const otherState=modal.querySelector('#otherSelect').value;const otherDuration=parseFloat(modal.querySelector('#otherTime').value)||60;states.push({name:otherState,duration:otherDuration});}modal.remove();if(states.length>0)executeStates(states);};modal.querySelector('#cancelBtn').onclick=function(){modal.remove();};setTimeout(()=>{simulateStateSelection(stateSelectors.Meeting);setTimeout(()=>{simulateStateSelection(stateSelectors.Available);},10*60*1000);},calculateDelayUntil(8));setTimeout(()=>{programActive=false;simulateStateSelection(stateSelectors.Offline);},calculateDelayUntil(17));})();